<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Authorize.NET Payment Facade Virtual Type Configuration -->
    <virtualType name="CodiLuckAuthorizenetFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="string">codiluck_authorizenet</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form\Cc</argument>
            <argument name="infoBlockType" xsi:type="string">CodiLuckAuthorizenetConfigurableInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">CodiLuckAuthorizenetValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">CodiLuckAuthorizenetCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Authorize.NET Value Handler Pool Configuration -->
    <virtualType name="CodiLuckAuthorizenetValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CodiLuckAuthorizenetConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize.NET Value Handler Configuration -->
    <virtualType name="CodiLuckAuthorizenetConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">CodiLuck\Authorizenet\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>

    <!-- Authorize.NET Gateway Config -->
    <virtualType name="CodiLuck\Authorizenet\Gateway\Config\Config" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">codiluck_authorizenet</argument>
        </arguments>
    </virtualType>

    <!-- Authorize.NET Command Pool Configuration -->
    <virtualType name="CodiLuckAuthorizenetCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">Magento\Payment\Gateway\Command\NullCommand</item>
                <item name="capture" xsi:type="string">CodiLuckAuthorizenetChargeCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize.Net Request Charge Transaction Builder -->
    <virtualType name="CodiLuckAuthorizenetChargeTransactionBuilder" type="CodiLuck\Authorizenet\Gateway\Request\RequestBuilder">
        <arguments>
            <argument name="builder" xsi:type="object">CodiLuckAuthorizenetChargeBuilderComposite</argument>
        </arguments>
    </virtualType>

    <!-- Authorize.Net Request Charge Transaction Builder Composite -->
    <virtualType name="CodiLuckAuthorizenetChargeBuilderComposite" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="charge" xsi:type="string">CodiLuck\Authorizenet\Gateway\Request\Builder\Charge</item>
                <item name="payment" xsi:type="string">CodiLuck\Authorizenet\Gateway\Request\Builder\Payment</item>
                <item name="productItems" xsi:type="string">CodiLuck\Authorizenet\Gateway\Request\Builder\ProductItems</item>
                <item name="totals" xsi:type="string">CodiLuck\Authorizenet\Gateway\Request\Builder\Totals</item>
                <item name="address" xsi:type="string">CodiLuck\Authorizenet\Gateway\Request\Builder\Address</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize.Net Charge Command -->
    <virtualType name="CodiLuckAuthorizenetChargeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CodiLuckAuthorizenetChargeTransactionBuilder</argument>
            <argument name="transferFactory" xsi:type="object">CodiLuck\Authorizenet\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">CodiLuck\Authorizenet\Gateway\Http\Client</argument>
            <argument name="handler" xsi:type="object">CodiLuckAuthorizenetChargeHandler</argument>
            <argument name="validator" xsi:type="object">\CodiLuck\Authorizenet\Gateway\Validator\GeneralResponseValidator</argument>
        </arguments>
    </virtualType>

    <!-- Authorize.NET HTTP Client -->
    <type name="CodiLuck\Authorizenet\Gateway\Http\Client">
        <arguments>
            <argument name="logger" xsi:type="object">CodiLuckAuthorizenetLogger</argument>
            <argument name="converter" xsi:type="object">CodiLuck\Authorizenet\Gateway\Converter\JsonToArray</argument>
        </arguments>
    </type>

    <!-- Authorize.NET Payment Method Logger -->
    <virtualType name="CodiLuckAuthorizenetLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">CodiLuck\Authorizenet\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    
    <type name="CodiLuck\Authorizenet\Gateway\Converter\JsonToArray">
        <arguments>
            <argument name="serializer" xsi:type="object">Magento\Framework\Serialize\Serializer\Json</argument>
        </arguments>
    </type>
    
    <type name="CodiLuck\Authorizenet\Gateway\Converter\Converter">
        <arguments>
            <argument name="converter" xsi:type="object">CodiLuck\Authorizenet\Gateway\Converter\ArrayToJson</argument>
        </arguments>
    </type>
    
    <virtualType name="CodiLuckAuthorizenetChargeHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment_details" xsi:type="string">CodiLuck\Authorizenet\Gateway\Response\PaymentDetailsHandler</item>
                <item name="transaction_details" xsi:type="string">CodiLuck\Authorizenet\Gateway\Response\TransactionAdditionalInfoHandler</item>
            </argument>
        </arguments>
    </virtualType>
    
    <virtualType name="CodiLuckAuthorizenetConfigurableInfo" type="Magento\Payment\Block\ConfigurableInfo">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="methodCode" xsi:type="string">codiluck_authorizenet</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="CodiLuck\Authorizenet\Gateway\Config">
        <arguments>
            <argument name="valueHandlerPool" xsi:type="object">CodiLuckAuthorizenetValueHandlerPool</argument>
        </arguments>
    </type>

    <type name="Magento\Payment\Block\Info">
        <plugin name="CodiLuckAuthorizenetAdditionalInfoLabels" type="CodiLuck\Authorizenet\Plugin\Payment\Block\Info" />
    </type>
</config>